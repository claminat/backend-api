# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/media_manager
MONGODB_DB_NAME=media_manager

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API Configuration
API_BASE_PATH=/api/v1
API_TIMEOUT_SECONDS=30

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs